                        <div id="divNotLogedIn" class="oggleHidden inline floatRight">
                            <div id="btnLayoutRegister" class="menuTab floatRight">
                                <a href="javascript:registerPlease()">Register</a>
                                <img id="btnHeaderRegisterSpinner" class="btnSpinnerImage" src="~/Images/loader.gif" />
                            </div>
                            <div id="btnLayoutLogin" class="menuTab floatRight">
