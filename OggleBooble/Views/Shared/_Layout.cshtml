    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {

            if ('@Request.IsAuthenticated' === 'True') {
                $('#divLogedIn').show()
            }
            else {
                var isOk = checkCookie("userName")
                if (isOk == "ok") {
                    $('#divLogedIn').show();
                }
                else {
                    $('#divNotLogedIn').show();
                }
            }

            if ('@User.IsInRole("Porn Editor")' === 'True' || (document.domain === 'localhost')) {
                $('#divPornEditor').show();
                $('#divNotLogedIn').hide();
            }

            //toggleTittyMenu(getOBCookie("ShapeOrPosesMenu", "shapes"));
            $('body').css("margin-top", $('#oggleBoobleHeader').height() + 30);
        });

    function toggleTittyMenu(sepectedTittyMenu) {
        //alert("tittyMenu: " + sepectedTittyMenu);
        $('.tittymenu').hide();
        if (sepectedTittyMenu == "poses")
            $('#tittyPosesLinks').show();
        else
            $('#tittyShapeLinks').show();
        setOBCookie('ShapeOrPosesMenu', sepectedTittyMenu);
    }
    </script>
</body>
