        padding-left: 222px;
        padding-bottom: 8px;
    }

    .indexTitle {
        display: block;
        width: 100%;
        text-align: center;
        color: #490157;
        font-family: 'Lucida Calligraphy';
        font-size: 33px;
        margin-bottom: 8px;
    }

    .floatingDirTree {
        border: solid thin blue;
        max-height: 666px;
        overflow: auto;
        position: absolute;
        background-color: #fef; /*#b081b1*/
        top: 100px;
        left: 200px;
        display: none;
    }
    .modalMessage {
        position: absolute;
        background-color: #666;
        top: 250px;
        color: #c3c2ae;
        border: solid 2px var(--borderColor);
        box-shadow: rgba(128, 128, 128, 0.55) 5px 6px;
        display: none;
    }
</style>

<div class="threeColumnArray">
    <div id="leftColumn">
        <div class="leftColumnList">
            <div onclick="window.location.href='/home/transitions?folder=boobs'">Transitions</div>
            <div onclick="window.location.href='/test/contextTest'">Boobs Rater</div>
            <div onclick="window.location.href='/test/contextTest'">Let me Expalin</div>
            <div onclick="$('#dirTreeContainer').toggle()">Category List</div>
            <div onclick="window.location.href='/home/Mobile?folder=boobs'">Mobile</div>
            @*<div onclick="$('#oggleBlogEntry').fadeIn()">Blog</div>*@
            <div onclick="showMessage('porn warning')">Nasty Porn</div>
        </div>
    </div>
    <div id="middleColumn">
        <div id="divStatusMessage"></div>
        <div id="galleryMessage" class="indexTitle"></div>
        <div id="carousel">
            @Html.Partial("_RandomImage", "boobs")
        </div>
    </div>
    <div id="rightColumn"></div>
</div>

<div id="warningMessage" class="modalMessage" onclick="goToPornSite();"   ></div>
<div id="dirTreeContainer" class="floatingDirTree">
    <div class="floatingCrudBanner">View A Category <div onclick="$('#dirTreeContainer').fadeOut()" class="farSide">x</div> </div>
    @Html.Partial("_DirTree")
</div>

<script>
    $(document).ready(function () {
        launchCarousel('boobs');
    });

    function treeToggle(id) {
        //alert($('#' + id + '').css("display"));
        if ($('#' + id + '').css("display") == "none") {
            $('#S' + id + '').html("[-] ");
        }
        else
            $('#S' + id + '').html("[+] ");
        $('#' + id + '').toggle();
    }
    function clickPath(path, id) {
        //alert(path.replace(/%20/g, " ") + "  " + id);
        window.location.href = "/home/ImagePage?folder=" + path.replace(/%20/g, " ");
    }

    function showMessage(title) {
        try {
            $.ajax({
                type: "GET",
                url: service + "/api/OggleBlog/?title=" + title,
                success: function (model) {
                    if (!model.CommentTitle.startsWith("ERROR")) {
                        pause();
                        $('#modalContent').html($('#warningMessage').html(model.CommentText).show());
                        $('#modalContainer').show();

                        //top: 250px;
                        //left: 200px;
                        $('#warningMessage').css("left", (($(window).width() / 2) - ($('#warningMessage').width() / 2)));

                    }
                    else
                        alert("showMessage: " + success)
                },
                error: function (xhr) {
                    $('#getDirTreeLoadingGif').hide();
                    alert("showMessage xhr: " + xhr.statusText);
                }
            });

        } catch (e) {
            alert("showMessage: " + e);
        }
    }

    function goToPornSite() {
        clearModal();
        window.location.href = "/porn";
    }


</script>