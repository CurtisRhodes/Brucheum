<style>
    #leftColumn, #middleColumn, #rightColumn {
        background-color: #fef; /*#b081b1*/
        font-family: Comic Sans MS;
    }

    a {
        text-decoration: none;
        cursor: pointer;
    }

    .boobleClassic {
        height: 225px;
    }

    .majorCategoryRow {
        padding-top: 120px;
        display: flex;
        margin-bottom: 100px;
        width: 100%;
        display: none;
    }

    .majorCategoryRowLinkItem {
        float: left;
        margin-left: 60px;
    }

    .containerImage {
        float: left;
        margin-left: 60px;
    }

    .sectionTitle {
        display: block;
        text-align: center;
    }

    .bottomLinks {
