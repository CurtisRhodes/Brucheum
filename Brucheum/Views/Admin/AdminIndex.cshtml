@{
    ViewBag.Title = "Admin";
}

<link href="~/Styles/crudEdit.css" rel="stylesheet" />

@*<style>
    .roundendButton {
        width: 111px;
        display: inline-block;
    }
</style>*@

<div class="threeColumnArray">
    <div id="leftColumn">
        <div class="vertMenu">
            @*<div class="vertMenuTab" id="optAddArticle">Add Articles</div>*@
            <div class="vertMenuTab" id="optAddRoles">Add Roles</div>
            <div class="vertMenuTab" id="optAssignRoles">Assign Roles</div>
            <div class="vertMenuTab" id="optRefEditor">Ref Editor</div>
            @*<div class="vertMenuTab" id="optArticleClass"> Article Classifications</div>*@
            <div class="vertMenuTab" id="optShowSiteStats">Show Site Stats</div>
        </div>
    </div>
    <div id="middleColumn">
        <div id="divStatusMessage"></div>
        <div class="adminOptionContainer">
            <div id="tabArticles" class="adminOption">
                @Html.Partial("_ManageArticles")
            </div>
            <div id="tabAddRoles" class="adminOption">
                @Html.Partial("_ManageRoles")
            </div>
            <div id="tabAssignRoles" class="adminOption">
                @Html.Partial("_ManageUserRoles")
            </div>
            <div id="tabRefEditor" class="adminOption">
                @Html.Partial("_ManageRefs")
            </div>
            <div id="tabArticleClass" class="adminOption">
                @Html.Partial("_ManageClassifications")
            </div>
            <div id="tabShowSiteStats" class="adminOption">
                @Html.Partial("_SiteStats")
            </div>
        </div>
    </div>
    <div id="rightColumn"></div>
</div>

<script>
    var service = '@ViewBag.Service';

    setLayout('Admin');

    $(document).ready(function () {
        $('.vertMenuTab').mouseout(function () {
            $(this).css('background-color', '#74bac3').css('color', '#000');
        });
        $('.vertMenuTab').mouseover(function () {
            $(this).css('background-color', '#4163aa').css('color', '#e4e4e4');
        });
    });

    // Articles
    $("#optAddArticle").click(function () {
        $('.adminOption').hide();
        $('#tabArticles').show();
        $('#btnArticleNew').hide();
        if ($('#articledbList').html() === "")
            getArticleList();
        if ($('#ddArticleCategory').html() == "")
            loadArticleCats();
    })
    // Roles
    $("#optAddRoles").click(function () {
        $('.adminOption').hide();
        $('#tabAddRoles').show();
        $('#btnRoleToggle').hide();
        if ($('#divRoleList').html() === "")
            getAllRoles();
    })
    // article Classifications
    $("#optArticleClass").click(function () {
        $('.adminOption').hide();
        $('#tabArticleClass').show();
        $('#btnArticleClassToggle').hide();
        if ($('#divArticleClassList').html() === "")
            GetArticleClasses();
    })
    // my famous Ref Editor
    $("#optRefEditor").click(function () {
        $('.adminOption').hide();
        $('#tabRefEditor').show();
        setRefsInititalState()
    })
    // person / role grid
    $("#optAssignRoles").click(function () {
        $('.adminOption').hide();
        $('#tabAssignRoles').show();
        setUserRolesInititalState();
    });
    // site stats
    $("#optShowSiteStats").click(function () {
        $('.adminOption').hide();
        $('#tabShowSiteStats').show();
    })

</script>
