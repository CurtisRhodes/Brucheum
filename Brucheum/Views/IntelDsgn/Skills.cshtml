
@{
    ViewBag.Title = "Skills";
}

<style>
    .wordCloudContainer {
        height: 700px;
        width: 1000px;
        border: solid thin red;
        margin-left: 2px;
        margin-top: 14px;
    }
    .cloudWord {
        position: absolute;
        display: inline-block;
        padding: 4px;
        margin: 4px;
        border: solid thin #5888c2;
        border-radius: 4px;
        background-color: #fef7f7; 
        cursor: pointer;
    }
    .dialogSnipitContainer {
        position: absolute;
        color: white;
    }


    .vertical-text {
        transform: rotate(90deg);
        transform-origin: left top 0;
    }
    .skillTitle {
        /*font-family: Algerian;*/
        font-size: 34px;
        text-align: center;
        padding: 2px 6px;
    }
    .skillNarrative {
        padding: 6px;
        width: 444px;
        overflow-y: auto;
        font-size: 14px;
    }

</style>

<div class="threeColumnArray">
    <div id="leftColumn"></div>
    <div id="middleColumn">
        <h2>My Skills</h2>
        <div id="skillsloadingGif" class="loadingGif"><img src="~/Images/loader.gif" /></div>
        <div id="skillsCloud" class="wordCloudContainer"></div>


        <div id="skillDetails" class="centeredDivShell" onclick="$(this).fadeOut()">
            <div class="centeredDivInner">
                <div id="skillName" class="skillTitle"></div>
                <div id="skillNarrative" class="skillNarrative"></div>
            </div>
        </div>

    </div>
    <div id="rightColumn"></div>
</div>

