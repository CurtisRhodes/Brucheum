                            //else {
                            $('#skillsCloud').append("<div id=" + obj.Id + " class='cloudWord' style='font-size:" + obj.SortOrder +
                                "px; top:" + topOff + "px; left:" + leftOff + "px;' >" + obj.Name + "</div>");

