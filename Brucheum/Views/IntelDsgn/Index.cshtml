
@{
    ViewBag.Title = "Intelligent Design";
    Layout = "~/Views/IntelDsgn/_ProfessionalLayout.cshtml";
}

<style>
    #FullCenterImage {
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .intelDesgnArticleContainer {
        position: absolute;
        color: white;
    }
    .articleBox {
        top: 300px;
        left: 444px;
        padding: 16px;
        border: solid thin yellow;
        max-width: 888px;
        background-color: rgba(0, 0, 0, 0.81);
        font-size: 18px;
        line-height: 27px;
        display: none;
    }

    .algerian {
        font-family: Algerian;
        font-size: 40px;
    }

    #divWelcomeMessage p {
        font-size: 18px;
    }
    #divWelcomeMessage a {
        color: #d1c998;
    }
    #leftColumn, #rightColumn {
        padding: 0;
    }

    #leftColumn {
        width: 30px;
    }
</style>

<div class="threeColumnArray">
    <div id="leftColumn"></div>
    <div id="middleColumn">
        <img alt="" id="FullCenterImage" src="~/Images/IntelDsgn/globlic.jpg" />
        <div id="divWelcomeMessage" class="intelDesgnArticleContainer">
            <div class="algerian">Welcome to Intelligent Design Software</div>
            <p>This web site demonstrates the work of an experienced if socially autistic web applications developer</p>
            <p>Check out the scection describing the <a href="~/IntelDsgn/Index?a=4">skills used to build this site</a></p>
            <p>Read some of my <a href="~/IntelDsgn/Articles">articles on computer programming</a></p>
            <p>See <a href="~/IntelDsgn/MyResume">My resume</a> with over thirty years experience. (yes I am old)</p>
            <p>If you might be interested in having me do some work for you</p>
            <p>(remote only) (direct hire only) please <a href="~/IntelDsgn/Contact">contact me</a> </p>
        </div>

        <div id="divArticleContainer" class="intelDesgnArticleContainer articleBox">
            <div id="divHeaderRow" class="algerian"></div>
            <div id="divArticleContainerContents"></div>
        </div>

    </div>
    <div id="rightColumn"></div>
</div>

<script>
    var service = '@ViewBag.Service'
    var articleId  = '@ViewBag.ArticleId'
    $(document).ready(function () {

        if (articleId != "") {
            getWebsiteDialog();
        }
        $('#divWelcomeMessage').css("top", $('#middleColumn').position().top + 30);
        $('#divWelcomeMessage').css("left", $('#middleColumn').position().left + 50);
        $('FullCenterImage').height($('#middleColumn').height());
        $('#footerMessage').append(" (consultion home Ready) ");
        
    });

    $(window).resize(function () {
        // footer
        //alert("IntelDsgn home resize")
        //$('#footerMessage').append(" (consultion home resize) ");
        //resizePage();
    });

    function getWebsiteDialog() {
        try {
          //  alert("service: " + service);
            $('#loadingGif').show();
            $.ajax({
                type: "GET",
                url: service + "/api/DbArticle?articleId=" + articleId,
                success: function (response) {
                    if (!response.ArticleTitle.startsWith("ERROR")) {
                        $('#divHeaderRow').html(response.ArticleTitle);
                        $('#divArticleContainerContents').html(response.ArticleText);
                        $('#divArticleContainer').show();
                        $('#loadingGif').hide();
                    }
                    else {
                        $('#loadingGif').hide();
