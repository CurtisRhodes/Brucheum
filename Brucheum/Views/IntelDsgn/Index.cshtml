                    }
                },
                error: function (jqXHR, exception) {
                    $('#loadingGif').hide();
                    alert("addEditArticle XHR error: " + getXHRErrorDetails(jqXHR, exception));
                }
            });
        } catch (e) {
            alert("get Articles CATCH: " + e)
        }
    }

</script>


