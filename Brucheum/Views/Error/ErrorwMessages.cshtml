
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #divErrorMessage {
        padding: 6px;
        border: 5px solid purple;
        width: 80%;
        height: 100px;
        margin-bottom: 8px;
        background-color: #dbcccc;

        overflow-y: auto;
        margin-top: 5px;
    }

    #divStackTrace {
        padding: 6px;
        border: 5px solid purple;
        width: 80%;
        background-color: #ccc;
        margin-bottom: 8px;
    }

    #errorMessage span {
        color: darkred;
    }
</style>

<div class="threeColumnArray">
    <div id="leftColumn">
    </div>
    <div id="middleColumn">
        <h2 id="errorMessage"></h2>
        <img src="~/Images/RenStimpy8.jpg" />
        <h4>StackTrace</h4>
        <div id="divStackTrace"></div>
    </div>
    <div id="rightColumn">
    </div>
</div>

<script>
    var stackTrace = '@ViewBag.StackTrace';
    var errorMessage = '@ViewBag.ErrorMessage';

    $(document).ready(function () {
        $('#errorMessage').html("OOPS:   <span>" + errorMessage + "</span>");
        $('#divStackTrace').html(stackTrace);
        resizePage();
    });
</script>
