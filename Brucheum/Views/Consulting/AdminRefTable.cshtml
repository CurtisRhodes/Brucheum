
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Consulting/_ProfessionalLayout.cshtml";
}
<style>
    #leftColumn {
        border-right: 2px solid orange;
    }

    .vertMenu {
        margin-top: 88px;
    }

    .vertMenuTab {
        border-radius: 4px;
        margin-left: 4px;
        margin-right: 8px;
        font-size: 14px;
        list-style: none;
        cursor: pointer;
        margin-bottom: 26px;
        white-space: nowrap;
    }

        .vertMenuTab a {
            text-decoration: none;
            color: black;
            padding-top: 10px;
            padding-bottom: 5px;
            padding-left: 20px;
            padding-right: 20px;
            color: #fff;
            background-color: #07c;
            text-wrap: none;
        }

            .vertMenuTab a:hover {
                text-decoration: underline;
                background-color: orange;
            }

    #adminOptionContainer {
        margin-left: 56px;
        margin-top: 56px;
    }

    .adminOption {
        display: none;
    }

    .adminOptionTitle {
        font-size: 24px;
        text-align: center;
        margin: 4px;
    }

    #articleClassesEdit {
        width: 500px;
        border: solid 2px purple;
        border-radius: 4px;
        margin-left: 56px;
        margin-top: 56px;
    }

    #articleClassList {
        border: solid 2px orange;
        border-radius: 4px;
        margin: 3px;
        overflow-y: scroll;
        max-height: 60%;
    }

    #articleClassesEdit li {
        list-style: none;
        padding: 8px;
        cursor: pointer;
        margin-bottom: 4px;
        background-color: #c3cecf;
    }

    #btnSaveAddArticleClassification, #btnNewAddArticleClassification {
        width: 40px;
        margin: 6px;
        display: inline-block;
    }

    .roundedInput {
        display: inline-block;
        width: 400px;
    }
</style>

<div class="threeColumnArray">
    <div id="leftColumn">
        <div class="vertMenu">
            <div class="vertMenuTab" id="articleClassifications"><a>Article Classifications</a></div>
            <div class="vertMenuTab" id="authorAvatars"><a>Author Avatars</a></div>
            <div class="vertMenuTab"><a>Ref Editor</a></div>
            <div class="vertMenuTab" id="assignRoles"><a>Assign Roles</a></div>
        </div>
    </div>
    <div id="middleColumn">
        <div id="divStatusMessage"></div>
        <div id="adminOptionContainer">

            <div class="adminOption" id="articleClassesEdit">
                <div class="adminOptionTitle">Article Classifications</div>
                <label>Category:</label>
                <input class="roundedInput" id="txtDescription" />
                <div id="divButtons">
                    <div class="roundendButton" id="btnSaveAddArticleClassification">Add</div>
                    <div class="roundendButton" id="btnNewAddArticleClassification">New</div>
                </div>
                <div id="articleClassList"></div>
            </div>

            <div class="adminOption" id="authorAvatarsEdit">
                <div class="adminOptionTitle">Author Avatars</div>
            </div>

            <div class="adminOption" id="assignRolesEdit">
                <div class="adminOptionTitle">Assign Roles</div>
            </div>
        </div>
    </div>
    <div id="rightColumn">
    </div>
</div>

<script>
    var service = '@ViewBag.Service';
    var ref = new Object();

    $(document).ready(function () {
        resizePage();
    });

    $("#assignRoles").click(function () {
        $('.adminOption').hide();
        $('#assignRolesEdit').show();
    })

    $("#authorAvatars").click(function () {
        $('.adminOption').hide();
        $('#authorAvatarsEdit').show();
    })

    $("#articleClassifications").click(function () {
        $('.adminOption').hide();
        $('#articleClassesEdit').show();
        $('#btnNewAddArticleClassification').hide();
        if ($('#articleClassList').html() === "")
            GetArticleClasses();
    })

    function GetArticleClasses() {
        try {
            $('#divLoadingGif').show();
            $.ajax({
                url: service + "/api/Ref/get/?refType=CAT",
                type: "get",
                dataType: "Json",
                success: function (result) {
                    $('#articleClassList').html("");
                    $.each(result, function () {
                        $('#articleClassList').append("<li Id='" + this.RefCode + "' data='" + this.RefDescription + "'>" + this.RefDescription + "</li>");
                    });

                    $('li').click(function () {
                        ref.RefCode = $(this).attr('Id');
                        $('#txtDescription').val($(this).attr('data'));
                        $('#btnSaveAddArticleClassification').text("Update");
                        $('#btnNewAddArticleClassification').show();
                    });
                },
                error: function (xhr) {
                    displayStatusMessage("alert-danger", "error: " + xhr.statusText);
                    alert("GetArticleClasses error: " + xhr.statusText);
                }
            });
        } catch (e) {
            displayStatusMessage("alert-danger", "catch ERROR: " + e);
        }
    }

    $('#btnSaveAddArticleClassification').click(function () {
        if ($('#btnSaveAddArticleClassification').text() === "Add")
            AddArticleClassification();
        else
            UpdateArticleClassification();
    });

    $('#btnNewAddArticleClassification').click(function () {
        ref.RefCode = null;
        $('#txtDescription').val("");
        $('#btnSaveAddArticleClassification').text("Add");
        $('#btnNewAddArticleClassification').hide();
    });

    function AddArticleClassification() {
        try {
            ref.RefDescription = $('#txtDescription').val();
            //alert("ref.RefDescription : " + ref.RefDescription);
            $.ajax({
                url: service + "/api/Ref/Put",
                type: "post",
                dataType: "Json",
                data: ref,
                success: function (result) {
                    if (result.Success === "ok") {
                        $('#txtDescription').val("");
                        $('#btnSaveAddArticleClassification').text("Add");
                        displayStatusMessage("alert-success", "Saved");
                        getRefs("CAT");
                    }
                    else
                        displayStatusMessage("alert-danger", "xhr ERROR: " + result.Success);
                },
                error: function (xhr) {
                    displayStatusMessage("alert-danger", "error: " + xhr.statusText);
                    alert("Admin Refs Post error: " + xhr.statusText);
                }
            });
        }
        catch (e) {
            displayStatusMessage("alert-danger", "catch ERROR: " + e);
        }
    }

    function UpdateArticleClassification() {
        try {
            ref.RefDescription = $('#txtDescription').val();
                $.ajax({
                    url: service + "/api/Ref/Put",
                    type: "PUT",
                    data: ref,
                    success: function (result) {
                        if (result.Success === "ok") {
                            displayStatusMessage("alert-success", "Saved");
                            getRefs("CAT");
                        }
                        else
                            displayStatusMessage("alert-danger", "server ERROR: " + result.Success);
                    },
                    error: function (xhr) {
                        displayStatusMessage("alert-danger", "error: " + xhr.statusText);
                        alert("Admin Refs PUT error: " + xhr.statusText);
                    }
                });
        }
        catch (e) {
            displayStatusMessage("alert-danger", "catch ERROR: " + e);
        }
    }

</script>
