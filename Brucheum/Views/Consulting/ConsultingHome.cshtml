}

<link href="~/Styles/ThreeColumnPage.css" rel="stylesheet" />

<style>
    .floatingContent {
        position: absolute;
        top: 50px;
        border: solid thin pink;
    }

    #FullCenterImage {
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    #divWelcomeMessage {
        position: absolute;
        left: 205px;
        top: 105px;
        color: white;
        /*border: solid thin yellow;*/
    }

    #divHeaderRow {
        font-family: Algerian;
        font-size: 40px;
    }

    #divWelcomeMessage p {
        font-size: 18px;
    }
    #divWelcomeMessage a {
        color: #d1c998;
    }
    #leftColumn, #rightColumn {
        padding: 0;
        background-color: #222730; /* #273235; #486167;*/
