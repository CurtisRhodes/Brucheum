@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Brucheum</title>
    <link href="~/Styles/default.css" rel="stylesheet" />
    <link href="~/Styles/fixedHeader.css" rel="stylesheet" />
    <script src="~/Scripts/3rd Party/jquery.min.js"></script>
    <script src="~/Scripts/GlobalFunctions.js"></script>
    <script src="~/Scripts/ResizeThreeColumnPage.js"></script>
</head>
<body>
    <div id="bheader" class="standardHeader">
        <div class="bannerImageContainer">
            <a href="~/Home/Index"><img src="~/images/house.gif" class="bannerImage" /></a>
        </div>
        <div class="headerBodyContainer">
            <div id="bannerTitle" class="headerTitle">
                Curtis Rhodes.com
            </div>
            <div class="menuTabContainer">
                <div class="menuTab floatLeft"><a href="~/Article/ArticleList">Latest Articles</a></div>
                <div class="menuTab floatLeft"><a href="~/Article/ArticleList?filterType=Category&filter=political rant">Political Rants</a></div>
                <div class="menuTab floatLeft"><a href="~/Article/ArticleList?filterType=Category&filter=conspiracy">Conspiracy Theories</a></div>
                <div class="menuTab floatLeft"><a href="~/Book/MyBooks">Books</a></div>
                <div class="menuTab floatLeft"><a href="~/Home/Apps">Apps</a></div>
                <div class="menuTab floatLeft"><a href="~/Consulting/ConsultingHome">Intelligent Design</a></div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="menuTab floatLeft"><a href="~/Admin">Admin</a></div>
                }
                @if (Request.IsAuthenticated)
                {
                    <div class="menuTab floatRight"><a href="javascript:callLogout()">Log Out</a></div>
                    <div class="menuTab floatRight" title="modify profile"><a href="javascript:callProfilePopup()">Hello  @User.Identity.GetUserName()</a></div>
                }
                else
                {
                    <div class="menuTab floatRight"><a href="javascript:callRegisterPopup()">Register</a></div>
                    <div class="menuTab floatRight"><a href="javascript:callLoginPopup()">Log In</a></div>
                }

            </div>
        </div>
        <div class="noFloat"></div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    @Html.Partial("_bFooter")
    <div id="modalContainer" class="modalVail">
        <div id="modalContent"></div>
    </div>
    @RenderSection("scripts", required: false)
    <script>resizePage();</script>
    <script src="~/Scripts/HeaderLogin.js"></script>
</body>
</html>
